<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/prata"
    tools:context=".Activitys.Activitys.HomeAdm">


    <LinearLayout
        android:id="@+id/menuCONTAINER"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/azulMercado"
            android:gravity="center">


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bgProdutos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Produtos"
                android:textSize="18sp"
                android:textColor="@color/branco"
                android:textStyle="bold"
                android:background="@drawable/bg_button_enable"
                android:padding="15dp"
                android:layout_margin="20dp"

                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bgPedidos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pedidos"
                android:textSize="18sp"
                android:textColor="@color/preto"
                android:textStyle="bold"
                android:padding="15dp"
                android:layout_margin="20dp"
                android:background="@drawable/bg_button_disable"
                />
            <TextView
                android:id="@+id/txtsair"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sair"
                android:textSize="18sp"
                android:textColor="@color/preto"
                android:textStyle="bold"/>


        </LinearLayout>





    </LinearLayout>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/containerFragmentsProdutos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/menuCONTAINER"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/containerFragmentsPedidos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@id/menuCONTAINER"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>





    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/CadastropRODUTOS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/azulMercado"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_add"
        android:layout_margin="20dp"/>













</androidx.constraintlayout.widget.ConstraintLayout>