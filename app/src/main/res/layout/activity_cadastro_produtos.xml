<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/branco"
    android:layout_height="match_parent"
    tools:context=".Activitys.Activitys.CadastroProdutos">



    <ImageView
        android:id="@+id/imgProduto"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@color/preto"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <ImageView
        android:id="@+id/selecFOTO"
        android:layout_width="45dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_adcfoto"
        app:layout_constraintBottom_toBottomOf="@id/imgProduto"
        app:layout_constraintStart_toStartOf="@id/imgProduto"
        app:layout_constraintEnd_toEndOf="@id/imgProduto"/>

    <EditText
        android:id="@+id/editNomePRODUTO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/caixas_adc"
        android:hint="Nome"
        android:inputType="text"
        android:maxLines="1"
        android:padding="15dp"
        android:textColor="@color/preto"
        android:textColorHint="@color/preto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgProduto" />

    <EditText
        android:id="@+id/editprecoPRODUTO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:layout_marginTop="8dp"
        android:hint="Preço"
        android:background="@drawable/caixas_adc"
        android:textColorHint="@color/preto"
        android:textColor="@color/preto"
        android:inputType="numberDecimal"
        android:maxLines="1"
        android:padding="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editNomePRODUTO" />

    <EditText
        android:id="@+id/editDescricaoPRODUTO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descrição"
        android:background="@drawable/caixas_adc"
        android:textColor="@color/preto"
        android:textColorHint="@color/preto"
        android:padding="15dp"
        android:maxLines="15"
        android:inputType="text"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        app:layout_constraintTop_toBottomOf="@id/editprecoPRODUTO"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/codigoEtag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        app:layout_constraintTop_toBottomOf="@id/editDescricaoPRODUTO"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/editcodgoPRODUTO"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Código"
            android:layout_margin="15dp"
            android:background="@drawable/caixas_adc"
            android:textColor="@color/preto"
            android:textColorHint="@color/preto"
            android:padding="15dp"
            android:maxLines="4"
            android:inputType="number"/>

        <EditText
            android:id="@+id/editTagProduto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="TAG de Pesqeuisa"
            android:layout_margin="15dp"
            android:background="@drawable/caixas_adc"
            android:textColor="@color/preto"
            android:textColorHint="@color/preto"
            android:padding="15dp"
            android:maxLines="4"
            android:inputType="text"/>

    </LinearLayout>

    <Button
        android:id="@+id/btcadastroProduto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cadastrar"
        android:textColor="@color/branco"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="15dp"
        android:background="@drawable/caixas_redondas"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/codigoEtag"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



























</androidx.constraintlayout.widget.ConstraintLayout>